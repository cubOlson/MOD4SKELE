extends layout

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/index.css")
  link(rel="stylesheet" href="/stylesheets/raindrops.css")
  //- add page specific js
  script(src="/javascripts/index.js" type="module")
  script(src="/javascripts/raindrops.js" type="module")

block content
  h1= title
  input#fetchCode(hidden=true value=APISecret)
  #Background
    #rainBody.back-row-toggle.splat-toggle
      .rain.front-row
      .rain.back-row 
    #weatherInfo
      form#searchForm
        input(type='text' class='weatherField' placeholder='Ex: Oklahoma City' required)
        input(type='text' class='weatherField' placeholder='Ex: OK')
        input(type='text' class='weatherField' placeholder='Ex: US')
        button#searchButton Submit
      #geoLo.weatherField
      #clouds.weatherField
      #pressure.weatherField
      #humidity.weatherField
      #temp.weatherField
      #location.weatherField
      #generic.weatherField
      button#refreshWeather Refresh
    #rockContainer 
      #rock
      #string
